<%- include('../partials/head.ejs') %>

    <body>
        <h1 class="register-title">Register | <a href="/">Home</a></h1>
        <div class="register-container">
            <form action="/auth/register" method="POST" class="form-register" enctype="multipart/form-data"
                onsubmit="return confirm('Do you really want to submit the form?');">
                <div class="form-input-register-group">
                    <label for="firstName">First name</label>
                    <input type="text" id="firstName" name="firstName" required />
                </div>
                <div class="form-input-register-group">
                    <label for="lastName">Last name</label>
                    <input type="text" id="lastName" name="lastName" required />
                </div>
                <div class="form-input-register-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required />
                </div>
                <div class="form-input-register-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required />
                </div>
                <div class="form-input-register-group">
                    <label for="confirmPassword">Confirm password</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" required />
                </div>
                <div class="form-input-register-group">
                    <!-- <label for="profilePicture" class="button button-upload">Profile Picture</label>
                    <input type="file" id="profilePicture" name="profilePicture" style="display: none;" /> -->
                    <label for="profilePicture">Profile Picture</label>
                    <input type="file" id="profilePicture" name="profilePicture" accept=".jpg,.jpeg,.png" />
                </div>
                <% if (error) { %>
                    <div class="error">
                        <%= error %>
                    </div>
                    <% } %>
                        <div class="form-register-button">
                            <button type="submit" class="button button-register">Register</button>
                            <a href="/auth/login" class="button">Login</a>
                        </div>
            </form>
        </div>
    </body>

    <%- include("../partials/foot.ejs") %>